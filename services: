services:
  nginx:
    image: nginx:latest
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx/conf.d/default.conf:/etc/nginx/conf.d/default.conf
      - ./certs:/etc/ssl/certs
    configuration: |
      server {
          listen 443 ssl;
          server_name localhost;

          ssl_certificate /etc/ssl/certs/localhost+2.pem;
          ssl_certificate_key /etc/ssl/certs/localhost+2-key.pem;

          # ... your proxy settings ...
      }